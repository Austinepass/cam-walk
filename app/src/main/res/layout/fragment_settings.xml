<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.SettingsFragment">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/settings_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/line1"
        android:layout_margin="8dp"
        android:layout_below="@id/settings_list"
        android:layout_alignParentRight="true"
        android:background="@color/black"
        android:layout_width="188dp"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/time_duration"
        android:text="TimeTravel duration:"
        android:layout_below="@id/line1"
        android:layout_margin="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/time_spinner"
        android:layout_below="@id/line1"
        android:layout_margin="8dp"
        android:backgroundTint="@color/black"
        android:background="@drawable/arrow_drop_down_24"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/line2"
        android:layout_margin="8dp"
        android:layout_below="@id/time_spinner"
        android:layout_alignParentRight="true"
        android:background="@color/black"
        android:layout_width="188dp"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/room_icon"
        android:text="Room icon size:"
        android:layout_below="@id/line2"
        android:layout_margin="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/room_spinner"
        android:layout_below="@id/line2"
        android:layout_margin="8dp"
        android:backgroundTint="@color/black"
        android:background="@drawable/arrow_drop_down_24"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View
        android:id="@+id/line3"
        android:layout_margin="8dp"
        android:layout_below="@id/room_spinner"
        android:layout_alignParentRight="true"
        android:background="@color/black"
        android:layout_width="188dp"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/language"
        android:text="Language:"
        android:layout_below="@id/line3"
        android:layout_margin="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Spinner
        android:id="@+id/language_spinner"
        android:layout_below="@id/line3"
        android:layout_margin="8dp"
        android:backgroundTint="@color/black"
        android:background="@drawable/arrow_drop_down_24"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/app_version"
        android:text="Cam App version installed 2.3.7 (2021):"
        android:layout_below="@id/language"
        android:layout_margin="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ui_size"
        android:text="Size of UI:"
        android:layout_below="@id/app_version"
        android:layout_margin="16dp"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.slider.Slider
        android:id="@+id/slider"
        android:layout_below="@id/app_version"
        android:layout_toRightOf="@id/ui_size"
        android:layout_marginLeft="88dp"
        android:value="20.0"
        android:valueFrom="0.0"
        android:valueTo="100.0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/system_info"
        android:text="System Info: DPI=440 (1080x2160)/ 1080 x 2160 @ 60Hz"
        android:layout_below="@id/ui_size"
        android:layout_margin="16dp"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>